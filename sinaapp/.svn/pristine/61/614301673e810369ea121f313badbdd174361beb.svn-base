.article_list_reply
{
	float:left;
	width:100%;
	overflow:hidden;
}

.article_list_reply .article_list_replym
{
	float:left;
	margin-top:-1px;
	background:url(../images/art24.png?021) repeat-y -1018px 0;
	padding:0 0 0 30px;
	width:560px;
	overflow:hidden;
	padding-bottom:10px;
}

.article_list_replym .replybox
{
	width:500px;
	overflow:hidden;
	padding:10px 0 10px 18px;
}

.article_list_replym .textarea
{
	float:left;
	width:383px;
	height:38px;
	overflow:hidden;
	border-bottom:#CDCDCD 1px solid;
	border-left:#9A9A9A 1px solid;
	border-top:#9A9A9A 1px solid;
	border-right:#CDCDCD 1px solid;
	padding-left:3px;
}

.article_list_replym button
{
	float:left;
	width:105px;
	height:40px;
	background:url(../images/btn24.png?041) no-repeat;
	color:#FFF;
	text-shadow:-1px -1px 0 #779E00;
	margin-left:6px;
	border:0;
	font-size:16px;
}

.article_list_replym button:hover
{
	background-position:-114px 0;
}

.article_list_replym ul
{
	margin-left:-10px;
}

.article_list_replym ul li
{
	list-style:none;
	border-top:1px solid #E7E7E7;
	padding:10px 30px;
	font-size:12px;
	overflow:hidden;
}

.article_list_replym .cmrn
{
	color:#7594B3;
	float:left;
	width:100%;
}

.article_list_replym .cmcontent
{
	float:left;
	width:90%;
	word-break:break-all;
	white-space:normal;
	padding:0  6px 0 6px;
}

.article_list_replym .rep
{
	float:left;
	width:6%;
	color:#7594B3;
}

.article_list_replym .hide
{
	height:18px;
	color:#AAA;
	font-size:12px;
	padding-left:20px;
	background:url(../images/icon26.png?030) no-repeat -40px -922px;
	padding-top:10px;
	cursor:pointer;
}

.article_list_replym .hide:hover
{
	background:url(../images/icon26.png?030) no-repeat -40px -945px;
	color:#7594B3;
}

.article_list_replyb
{
	height:15px;
	overflow:hidden;
	background:url('../images/art24.png') -1652px 0;
}

.replybox .innern
{
	margin-top:4px;
	height:29px;
	line-height:25px;
	border:0;
	width:70px;
	overflow:hidden;
}

.replybox .innerm
{
	margin-top:4px;
	height:29px;
	line-height:25px;
	border:0;
	border-left:1px dashed #DFDFDF;
	width:300px;
	overflow:hidden;
}